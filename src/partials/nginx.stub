  nginx:
    build:
      context: .
      dockerfile: ${docker_path}/nginx/Dockerfile
      args:
        USERGROUP: '${USERGROUP}'
    volumes:
      - ${site_path}:/var/www
      - ${docker_path}/nginx/conf.d/:/etc/nginx/conf.d
      - ${docker_path}/nginx/certs/:/etc/nginx/certs
    ports:
      - "80:80"
      - "443:443"
    depends_on:
      - app
    networks:
      - compose
    container_name: nginx